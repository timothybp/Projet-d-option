<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>DistributionDeProjets</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>login.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>controllers.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>choose</servlet-name>
    <servlet-class>controllers.ChooseServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>choose</servlet-name>
    <url-pattern>/choose_project</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>visualize</servlet-name>
    <servlet-class>controllers.VisualizeServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>visualize</servlet-name>
    <url-pattern>/visualize_my_project</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>propose</servlet-name>
    <servlet-class>controllers.ProposeServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>propose</servlet-name>
    <url-pattern>/propose_new_project</url-pattern>
  </servlet-mapping>
</web-app>